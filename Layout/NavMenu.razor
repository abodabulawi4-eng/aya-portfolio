@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavManager

<nav class="navbar">
    <div class="nav-container container">
        <div class="nav-brand">
            <NavLink href="/" class="brand-link">
                <span class="brand-name">Aya</span>
                <span class="brand-accent">Alqennah</span>
            </NavLink>
        </div>

        <div class="nav-links">
            <NavLink href="/" class="nav-link" Match="NavLinkMatch.All">
                <span class="nav-icon">🏠</span> Home
            </NavLink>
            <NavLink href="about" class="nav-link">
                <span class="nav-icon">👤</span> About
            </NavLink>
            <NavLink href="skills" class="nav-link">
                <span class="nav-icon">💻</span> Skills
            </NavLink>
            <NavLink href="projects" class="nav-link">
                <span class="nav-icon">🚀</span> Projects
            </NavLink>
            <NavLink href="contact" class="nav-link">
                <span class="nav-icon">📞</span> Contact
            </NavLink>
        </div>

        <button class="mobile-menu-btn" @onclick="ToggleMobileMenu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</nav

<div class="mobile-menu @(isMobileMenuOpen ? "active" : "")">
    <NavLink href="/" class="mobile-nav-link" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
        <span class="nav-icon">🏠</span> Home
    </NavLink>
    <NavLink href="about" class="mobile-nav-link" @onclick="CloseMobileMenu">
        <span class="nav-icon">👤</span> About
    </NavLink>
    <NavLink href="skills" class="mobile-nav-link" @onclick="CloseMobileMenu">
        <span class="nav-icon">💻</span> Skills
    </NavLink>
    <NavLink href="projects" class="mobile-nav-link" @onclick="CloseMobileMenu">
        <span class="nav-icon">🚀</span> Projects
    </NavLink>
    <NavLink href="contact" class="mobile-nav-link" @onclick="CloseMobileMenu">
        <span class="nav-icon">📞</span> Contact
    </NavLink>
</div>

@code {
    private bool isMobileMenuOpen = false;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }
}

<style>
    /*
      ألوان شريط التنقل
      تمت إضافة هذا الكود ليتناسب مع تصميم Rose Gold
    */

    .navbar {
        /* تأثير الزجاج - خلفية شفافة غامقة */
        background-color: rgba(20, 16, 20, 0.7); /* --bg-primary with opacity */
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        
        /* إطار وردي ذهبي خفيف */
        border-bottom: 1px solid var(--border-color);
        box-shadow: 0 2px 10px var(--shadow-color);
        
        /* تثبيت في الأعلى */
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 1rem 0;
    }

    /* لون الشعار (الاسم الثاني) */
    .brand-accent {
        /*
         هذا هو الكود الأهم
         يغير لون الاسم الثاني ("Alqennah") إلى اللون الذهبي الوردي
        */
        color: var(--accent-rose-gold); /* #E6B3C7 */
    }

    /* لون الروابط */
    .nav-link {
        color: var(--text-secondary); /* #C8C0CC */
        transition: color 0.3s ease;
        padding-bottom: 5px;
        border-bottom: 2px solid transparent;
        font-weight: 500;
    }

    /* لون الرابط عند المرور عليه */
    .nav-link:hover {
        color: var(--accent-rose-gold); /* #E6B3C7 */
    }

    /* لون الرابط النشط (الصفحة الحالية) */
    .nav-link.active {
        color: var(--accent-rose-gold); /* #E6B3C7 */
        font-weight: 600;
        /* إطار سفلي ناعم */
        border-bottom: 2px solid var(--accent-rose-gold);
    }
    
    .nav-icon {
        margin-right: 5px;
    }

    /* --- ألوان القائمة للموبايل --- */
    .mobile-menu {
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
    }

    .mobile-nav-link {
         color: var(--text-secondary);
    }
    
    .mobile-nav-link:hover {
        color: var(--accent-rose-gold);
    }
    
    .mobile-nav-link.active {
        color: var(--accent-rose-gold);
        background: rgba(92, 83, 103, 0.2); /* --btn-secondary-bg with opacity */
    }

    /* (هذا الكود من تصميمك الأصلي) */
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .brand-link {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        text-decoration: none;
    }

    .brand-name {
        color: var(--text-primary);
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .mobile-menu-btn {
        display: none; /* يظهر في الميديا كويري */
    }

    .mobile-menu {
        display: none; /* يظهر في الميديا كويري */
    }

    /* --- تنسيقات الموبايل --- */
    @@media (max-width: 768px) {
        .nav-links {
            display: none;
        }

        .mobile-menu-btn {
            display: flex;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
            background: none;
            border: none;
        }

        .mobile-menu-btn span {
            width: 25px;
            height: 3px;
            background: var(--text-primary);
            border-radius: 3px;
        }

        .mobile-menu {
            display: none;
            flex-direction: column;
            width: 100%;
            position: fixed; /* تغيير إلى fixed ليبقى فوق المحتوى */
            top: 70px; /* تحت الناف بار */
            left: 0;
            z-index: 100;
        }

        .mobile-menu.active {
            display: flex;
        }

        .mobile-nav-link {
            padding: 1rem;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
            text-decoration: none;
        }
    }

</style>