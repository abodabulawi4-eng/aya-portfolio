<style>
    .contact-page {
        min-height: 100vh;
        background: var(--bg-primary);
    }

    /* Header */
    .contact-hero {
        padding: 120px 0 80px;
        background: linear-gradient(135deg, rgba(242, 237, 244, 0.5) 0%, transparent 100%); /* --bg-secondary with opacity */
        text-align: center;
    }

    .contact-hero-content h1 {
        font-size: 3.5rem;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
    }

    .text-accent {
        color: var(--accent-rose-gold);
    }

    .hero-description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--text-secondary);
        max-width: 800px;
        margin: 0 auto;
    }

    /* Contact Content */
    .contact-content {
        padding: 80px 0;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Contact Information */
    .contact-info-section h2 {
        color: var(--text-primary);
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }

    .contact-intro {
        color: var(--text-secondary);
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .contact-methods {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .contact-method {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.5rem;
        background: var(--bg-primary); /* لؤلؤي */
        border-radius: 12px; /* زوايا ناعمة */
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px var(--shadow-color); /* ظل وردي باهت */
    }

        .contact-method:hover {
            border-color: var(--accent-rose-gold);
            transform: translateX(5px);
        }

    .method-icon {
        font-size: 1.5rem;
        margin-top: 0.25rem;
    }

    .method-info h4 {
        color: var(--text-primary);
        margin-bottom: 0.25rem;
        font-size: 1.1rem;
    }

    .method-info p {
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
    }

    .method-link {
        color: var(--accent-rose-gold);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .method-link:hover {
            color: var(--text-primary);
        }

    /* Availability Card */
    .availability-card {
        background: rgba(230, 164, 180, 0.1); /* --shadow-color */
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid var(--border-color);
    }

        .availability-card h4 {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .availability-card p {
            color: var(--text-secondary);
            margin-bottom: 1rem;
            line-height: 1.5;
        }

    .availability-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #008000; /* أخضر أغمق ليتناسب مع الخلفية الفاتحة */
        font-weight: 500;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background: #008000;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    /* Call to Action */
    .contact-cta {
        padding: 80px 0;
        background: linear-gradient(135deg, rgba(242, 237, 244, 0.5) 0%, transparent 100%); /* --bg-secondary with opacity */
        text-align: center;
    }

    .cta-content h2 {
        font-size: 2.5rem;
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .cta-content p {
        font-size: 1.1rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        padding: 15px 35px;
        border: none;
        border-radius: 8px; /* زوايا ناعمة */
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        min-width: 180px;
    }

    .btn-primary {
        background-image: linear-gradient(90deg, var(--accent-gradient-start) 0%, var(--accent-gradient-end) 100%);
        color: var(--text-on-accent);
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px var(--shadow-color);
            filter: brightness(1.05);
        }

    .btn-secondary {
        background: var(--btn-secondary-bg);
        border: 2px solid var(--btn-secondary-border);
        color: var(--accent-rose-gold);
    }

        .btn-secondary:hover {
            background: var(--btn-secondary-hover);
            color: var(--text-primary);
            border-color: var(--accent-rose-gold);
            transform: translateY(-3px);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .contact-hero-content h1 {
            font-size: 2.5rem;
        }

        .contact-grid {
            gap: 3rem;
            padding: 0 1rem;
        }

        .cta-content h2 {
            font-size: 2rem;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 300px;
        }
    }

    @@media (max-width: 480px) {
        .contact-hero-content h1 {
            font-size: 2rem;
        }

        .contact-method {
            padding: 1rem;
        }
    }
</style>